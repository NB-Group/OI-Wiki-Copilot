{
    "manifest_version": 3,
    "name": "OI-Wiki Copilot",
    "version": "1.5.1",
    "description": "为 OI-Wiki 添加自定义注释、AI 问答和 AI 润色功能。",
    "icons": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
    },
    "permissions": ["contextMenus", "storage", "scripting"],
    "host_permissions": ["https://oi-wiki.org/*", "https://api.siliconflow.cn/*"],
    "background": {
      "service_worker": "js/background.js"
    },
    "options_ui": {
      "page": "settings.html",
      "open_in_tab": true
    },
    "content_scripts": [
      {
        "matches": ["https://oi-wiki.org/*"],
        "js": ["assets/katex/katex.min.js", "js/content.js"],
        "css": ["assets/katex/katex.min.css", "css/styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/icons/icon.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["assets/katex/fonts/*.woff2", "assets/icons/icon.png"],
        "matches": ["https://oi-wiki.org/*"]
      }
    ]
  }
  